$color-dark-cyan: #3F5C63;
$color-orange: #F35B22;
$color-light-cyan: #66939E;
$color-light-blue: #F5F6FA;

body {
  color: $color-dark-cyan;
  font-family: 'Lato', sans-serif;
  text-align: center;
}

.color-header {
  padding-bottom: 0.5em;
}

@mixin shape {
  height: 50px;
  width: 50px;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}

[class$="color1"]
  {@include shape;
    background-color: $color-dark-cyan;
}

[class$="color2"]
  {@include shape;
    background-color: $color-orange;
}

[class$="color3"]
  {@include shape;
    background-color: $color-light-cyan;
}

[class$="color4"]
  {@include shape;
    background-color: $color-light-blue;
}

